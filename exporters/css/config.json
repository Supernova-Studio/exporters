        "description": "Export token names in the selected case.",
        "category": "Token names",
        "options": {
            "camelCase": {
                "label": "Camel case",
                "description": "Example: --myVariableName"
            },
            "constantCase": {
                "label": "Constant case",
                "description": "Example: --MY_VARIABLE_NAME"
            },
            "flatCase": {
                "label": "Flat case",
                "description": "Example: --myvariablename"
            },
            "kebabCase": {
                "label": "Kebab case",
