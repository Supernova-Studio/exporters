{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": ".",    
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "sourceMap": false,
    "pretty": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "traceResolution": false
  },
  "include": ["./*.ts", "helpers/*.ts", "enums/*.ts"],
  "exclude": ["node_modules", "dist", "**/tests/*.test.ts", "jest.config.*"]
} 